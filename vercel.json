{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "TESSDATA_PREFIX": "/var/task/tessdata",
    "TESSERACT_CMD": "tesseract"
  },
  "buildCommand": "bash vercel-build.sh"
}
